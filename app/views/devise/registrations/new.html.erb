<%= render partial: "shared/second_navbar", locals: { title: "SIGN UP" } %>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <section class="container">
    <div class="my-3">
      <%= f.text_field :name, class: "text-input", placeholder: "Name" %>
    </div>

    <div class="my-3">
      <%= f.text_field :email, class: "text-input", placeholder: "Email" %>
    </div>

    <div class="my-3">
      <%= f.password_field :password, class: "text-input", placeholder: "Password", autocomplete: "new-password" %>
    </div>

    <div class="my-3">
      <%= f.password_field :password_confirmation, class: "text-input", placeholder: "Repeat password", autocomplete: "new-password" %>
    </div>

    <%= render "devise/shared/links" %>
  </section>

  <div class="bottom-container position-fixed bottom-0 w-100">
    <div class="inner-bottom-container text-center">
      <%= f.submit "SIGN UP", class: "bottom-btn new-btn" %>
    </div>
  </div>
<% end %>